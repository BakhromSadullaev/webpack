{
  "name": "react_webpack_starter",
  "version": "1.0.0",
  "description": "Boilerplate for react apps",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --open --hot",
    "build": "webpack --mode production",
    "pre-commit": "lint-staged",
    "lint:fix": "eslint src/**/*.js --fix",
    "lint": "eslint src/**/*.js",
    "prettify": "prettier src/**/*.js --write",
    "prepare": "husky install",
    "test": "echo run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BakhromSadullaev/webpack.git"
  },
  "author": "Bakhromjon Sadullaev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BakhromSadullaev/webpack/issues"
  },
  "homepage": "https://github.com/BakhromSadullaev/webpack#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "babel-loader": "^8.2.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "printWidth": 90,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  }
}
